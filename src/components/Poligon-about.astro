---
interface Props {
    icon: string;
    title: string;
    text: string;
}
const {icon, title, text} = Astro.props
---

<article class="polygon">
    <h3>{title}</h3>
    <div class="content-images">
        <img src="/arrow-right.svg" alt="">
        <img src={icon} alt="">
        <img src="/arrow-left.svg" alt="">
    </div>
    <p>
        {text}
    </p>
</article>

<style>
    .polygon{
        background: var(--tertiary-color);
        width: 17rem;
        height: 17rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column nowrap;
        gap: 1rem;
        padding: 1rem;
        transition: .3s ease-in-out;
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    }
    .content-images{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: row nowrap;
        gap: 2rem;
        overflow: hidden;
        transition: .5s ease;
    }
    .polygon img{
        width: 2rem;
        height: 2rem;
        overflow: hidden;
    }
    .polygon h3{
        font-size: 1.3rem;
        font-weight: 500;
        overflow: hidden;
    }
    .polygon p{
        text-align: center;
    }
    .polygon:hover{
        background-color: var(--secondary-color);
    }
    .polygon:hover .content-images{
        gap: .5rem;
    }
    @media screen and (max-width: 425px) {
    /* Estilos que se aplicar√°n cuando el ancho de la pantalla sea 320px o menos */
    .polygon{
        background: var(--tertiary-color);
        width: 13rem;
        height: 13rem;
    }
    .polygon h3{
        font-size: 1rem;
        width: 100%;
        text-align: center;
    }
    .polygon p{
        display: none;
    }
    }

    @media screen and (min-width: 1768px) {
        
        .polygon{
            width: 28rem;
            height: 28rem;
            padding: 2rem;
        }
        .polygon h3{
            font-size: 2rem;
            width: 80%;
            text-align: center;
        }
        .polygon p{
            font-size: 2rem;
            display: block;
        }
        .polygon img{
            width: 2.5rem;
            height: 2.5rem;
        }

        .content-images{
            gap: 3rem;
        }
    }

    @media screen and (min-width: 2560px) {
        
        .polygon{
            width: 40rem;
            height: 40rem;
            padding: 2.5rem;
        }
        .polygon h3{
            font-size: 4rem;
            width: 75%;
            text-align: center;
            font-weight: 600;
        }
        .polygon p{
            font-size: 3rem;
            display: block;
        }
        .polygon img{
            width: 3.5rem;
            height: 3.5rem;
        }

        .content-images{
            gap: 4rem;
        }
    }
</style>