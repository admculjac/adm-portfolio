    .grande{
        width: 200%;
        display: flex;
        flex-flow: row nowrap;
        justify-content: flex-start;
        align-items: center;
        transition: all .5s ease;
    }
    .carrousel .video{
        width: calc(100%/2);
        height: 385px;
        border: none;
        position: relative;
    }
    .one{
        background-color: #F0C275;
    }
    .two{
        background-color: #e69e22;
    }
    .carrousel .puntos{
        width: 100%;
        background: transparent;
        padding: .3em;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: row nowrap;
        gap: 1rem;
        margin-top: 1rem
        
    }
    .carrousel .punto{
        width: .8em;
        height: .8em;
        border: 2px solid var(--secondary-color);
        border-radius: 100%;
        overflow: hidden;
        transition: .3s ease-in-out;
    }
    .carrousel .punto.active{
        background-color: var(--secondary-color);
    }
    h2{
        color: var(--secondary-color);
        font-size: 3rem;
        text-align: start;
        width: 50%;
    }
