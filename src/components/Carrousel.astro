        .carrousel .video{
            height: 100%;
        }

        .carrousel .puntos .punto{
            height: 1rem;
            width: 1rem;
        }
        
        div .grande{
            height: 90%;
        }
        
    }

    @media(min-width: 2560px) {
        h2{
            font-size: 10rem;
        }
