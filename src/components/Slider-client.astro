<style>
    .carrousel-short{
        width: 40%;
        max-width: 120em;
        position: relative;
    }
    .grande-client{
        width: 400%;
        display: flex;
        flex-flow: row nowrap;
        justify-content: flex-start;
        align-items: center;
        transition: all .5s ease;
        position: relative;
    }
    .carrousel-short .content-client{
        width: calc(100%/4);
        height: 450px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column nowrap;
        border: none;
    }
    .carrousel-short .content-client img{
        width: 20rem;
        height: 20rem;
    }
    .carrousel-short .content-client h3{
        font-size: 2rem;
        color: var(--secondary-color);
        overflow: hidden;
        text-align: center;
        width: 100%;
    }
    .carrousel-short .puntos{
        width: width: 100%;;
        background: transparent;
        padding: .3em;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: row nowrap;
        gap: 1rem;
        margin-top: 1rem;
        transition: .3s ease-in-out;
    }
    .carrousel-short .punto-client{
        width: .5em;
        height: .5em;
        border: 2px solid var(--secondary-color);
        border-radius: 100%;
        overflow: hidden;
    }
    .carrousel-short .punto-client.active{
        background-color: var(--secondary-color);
    }
    h2{
        color: var(--secondary-color);
        font-size: 3rem;
        text-align: center;
        width: 100%;
    }
    @media screen and (max-width: 425px) {
    /* Estilos que se aplicar√°n cuando el ancho de la pantalla sea 320px o menos */
        .carrousel-short{
            width: 100%;
        }
    }

    @media screen and (min-width: 1768px) {
        
        h2{
            font-size: 4rem;
        }

        .carrousel-short .content-client{
            height: 500px;
        }

        .carrousel-short .content-client img{
            width: 30rem;
            height: 30rem;
        }

        .carrousel-short .content-client h3{
            font-size: 2.5rem;
        }

        .carrousel-short .punto-client{
            width: 1rem;
            height: 1rem;
        }
        
    }

    @media screen and (min-width: 2560px) {
        
        h2{
            font-size: 10rem;
        }

        .carrousel-short .content-client{
            height: 50rem;
        }

        .carrousel-short .content-client img{
            width: 50rem;
            height: 50rem;
            margin-bottom: -4rem;
        }

        .carrousel-short .content-client h3{
            font-size: 4rem;
        }

        .carrousel-short .puntos{
            margin-top: 1rem;
        }

        .carrousel-short .punto-client{
            width: 2rem;
            height: 2rem;
        }
        
    }
</style>

<script>
    const grande = document.querySelector(".grande-client") as HTMLElement;;
    const punto = document.querySelectorAll(".punto-client") as NodeListOf<HTMLElement>;;

    punto.forEach((cadaPunto, i) => {
        cadaPunto.addEventListener("click", () => {
            let posicion = i;
            let operacion = posicion * (100 / 4);

            grande.style.transform = `translateX(-${operacion}%)`;
            
            punto.forEach((cadaPunto, i)=>{
                punto[i].classList.remove("active")
            })
            punto[i].classList.add("active")
        });
    });
</script>
