<h2>
    SHORTS
</h2>
<div class="carrousel-short">
    <div class="grande-short">
        <iframe
        src="https://drive.google.com/file/d/1CyPyT6ydAUGk5CRE9IIj0A8jvCOu3Zo1/preview"
        title="YouTube video player"
        class="video"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    <iframe
        src="https://drive.google.com/file/d/1UPf2iuhmrVO8IiQdJXpwKVP8XKTKjjf1/preview"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        class="video"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    <iframe
        src="https://drive.google.com/file/d/1cpJXSaIHrVXynXGz9SBFMji1OgTYfOVH/preview"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        class="video"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>
    <ul class="puntos">
        <li class="punto-short active"></li>
        <li class="punto-short"></li>
        <li class="punto-short"></li>
    </ul>
</div>

<style>
    .carrousel-short{
        width: 260px;
        max-width: 120em;
        position: relative;
    }
    .grande-short{
        width: 300%;
        display: flex;
        flex-flow: row nowrap;
        justify-content: flex-start;
        align-items: center;
        transition: all .5s ease;
        position: relative;
    }
    .carrousel-short .video{
        width: calc(100%/3);
        height: 450px;
        border: none;
    }
    .one{
        background-color: #F0C275;
    }
    .two{
        background-color: #e69e22;
    }
    .three{
        background-color: #ee9803;
    }
    .carrousel-short .puntos{
        width: 100%;
        background: transparent;
        padding: .3em;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: row nowrap;
        gap: 1rem;
        margin-top: 1rem;
        transition: .3s ease-in-out;
    }
    .carrousel-short .punto-short{
        width: .8em;
        height: .8em;
        border: 2px solid var(--secondary-color);
        border-radius: 100%;
        overflow: hidden;
    }
    .carrousel-short .punto-short.active{
        background-color: var(--secondary-color);
    }
    h2{
        color: var(--secondary-color);
        font-size: 3rem;
        text-align: start;
        width: 40%;
    }
    @media screen and (max-width: 425px) {
    /* Estilos que se aplicar√°n cuando el ancho de la pantalla sea 320px o menos */
        .carrousel-short .video{
            height: 440px;
        }
        h2{
            width: 90%;
        }
    }

    @media screen and (min-width: 1768px) {
        h2{
            font-size: 5rem;
        }

        .carrousel-short{
            width: 38%;
        }

        .carrousel-short .video{
            height: 600px;
        }

        .carrousel-short .puntos{
            margin-top: 0.5rem;
        }

        .carrousel-short .punto-short{
            width: 1rem;
            height: 1rem;
        }
    }

    @media screen and (min-width: 2560px) {
        h2{
            font-size: 10rem;
        }

        .carrousel-short{
            width: 38%;
        }

        .carrousel-short .video{
            height: 50vh;
        }

        .carrousel-short .puntos{
            margin-top: 0.5rem;
        }

        .carrousel-short .punto-short{
            width: 2rem;
            height: 2rem;
        }
    }
</style>

<script>
    const grande = document.querySelector(".grande-short") as HTMLElement;;
    const punto = document.querySelectorAll(".punto-short") as NodeListOf<HTMLElement>;;

    punto.forEach((cadaPunto, i) => {
        cadaPunto.addEventListener("click", () => {
            let posicion = i;
            let operacion = posicion * (100 / 3);

            grande.style.transform = `translateX(-${operacion}%)`;
            
            punto.forEach((cadaPunto, i)=>{
                punto[i].classList.remove("active")
            })
            punto[i].classList.add("active")
        });
    });
</script>
