---
interface Props {
    name: string;
    text: string;
    imgPath: string;
}
const { name, text, imgPath } = Astro.props;
---

<article class="content-testimony">
    <div class="testimony-data">
        <img src={imgPath} alt="" />
        <h4>{name}</h4>
    </div>
    <p class="testimony-text">
        {text}
    </p>
</article>

<style>
    .content-testimony{
        width: 80%;
        height: 13rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column nowrap;
        background-color: var(--secondary-color);
        padding: .5rem;
        border-top-left-radius: 2rem;
        border-bottom-right-radius: 2rem;
    }
    .testimony-data{
        width: 100%;
        height: 30%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        overflow: hidden;
    }
    .testimony-data img{
        width: 5rem;
        height: 5rem;
    }
    .testimony-data h4{
        font-weight: bold;
        padding-right: 1rem;
        height: 50%;
        overflow: hidden;
    }
    .testimony-text{
        font-size: 1.1rem;
        padding-right: 1rem;
        padding-left: 1rem;
    }
    @media screen and (max-width: 425px) {
    /* Estilos que se aplicar√°n cuando el ancho de la pantalla sea 320px o menos */
    .content-testimony{
        width: 90%;
        height: 20rem;
        padding: .5rem;
    }
    }

    @media screen and (min-width: 1768px) {
        
        .content-testimony{
            width: 90%;
            height: 15rem;
            padding: .5rem;
        }

        .testimony-data img{
            width: 8rem;
            height: 8rem;
        }

        .testimony-data h4{
            font-size: 2rem;
            width: 20%;
        }

        .testimony-text{
            height: 60%;
            width: 90%;
            font-size: 1.8rem;

        }
        
    }

    @media screen and (min-width: 2560px) {
        
        .content-testimony{
            width: 80%;
            height: 25rem;
            display: flex;
            justify-content: center;
            padding: 1rem;
        }

        .testimony-data{
            width: 100%;
            height: 40%;
            display: flex;
            justify-content: space-between;
        }

        .testimony-data img{
            width: 15rem;
            height: 15rem;
        }

        .testimony-data h4{
            width: 25%;
            height: max-content;
            font-size: 5rem;
        }

        .testimony-text{
            height: 60%;
            width: 90%;
            font-size: 3rem;

        }
        
    }
    </style>